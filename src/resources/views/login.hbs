<div class="container-new">
  <div class="Left_side">
    <img src="img/anhteam.jpg" alt="anh team" />
  </div>
  <div class="Right_side">
    <div class="login-box">
      <h2>Login</h2>
      <form method="post" action="/" id="form">
        <div class="user-box">
          <input type="text" name="username" required="" id="username" {{#if block}}disabled{{/if}}/>
          <label>Username</label>
        </div>
        <div class="user-box">
          <input type="password" name="password" required="" id="password" {{#if block}}disabled{{/if}}/>
          <label>Password</label>
        </div>
        {{#if notLogin}}
        <div class="alert alert-primary" role="alert">
          Invalid username or password!
        </div>
        {{/if}}
        {{#if block}}
        <div class="alert alert-primary" role="alert">
          You will be blocked for 15 minutes
        </div>
        {{/if}}
        <br /><br />

        <button type="submit" id="submitButton" {{#if block}}disabled{{/if}}>
          Submit
        </button>
      </form>
    </div>
  </div>
</div>
<script>
  if(block){
    document.getElementById('form').disabled=true;
    document.getElementById('username').disabled=true;
    document.getElementById('password').disabled=true;
    document.getElementById('form').disabled=true;
  }
</script>