<div>
  <h1> Problem Set </h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Task Name</th>
      <th scope="col">Score</th>
    </tr>
  </thead>
  <tbody>
    {{#each tasks}}
      <tr>
        <th scope="row">1</th>
        <td>
          <a href="tasks/{{this.slug}}">
            {{this.task_name}}
          </a>
        </td>
        <td>{{this.score}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">When</th>
      <th scope="col">Task Name</th>
      <th scope="col">Status</th>
    </tr>
  </thead>
  <tbody>
    {{#each submissions}}
      <tr>
        <th scope="row">1</th>
        <td>{{this.submissions_id}}</td>
        <td>{{this.task_name}}</td>
        <td>{{this.status}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>